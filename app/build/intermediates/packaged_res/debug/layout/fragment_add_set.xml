<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearCollection"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".CollectionFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <Button
            android:id="@+id/button_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:layout_marginStart="136dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/Zatwierdz" />

        <Button
            android:id="@+id/button_collection"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:layout_marginStart="292dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/cofnij" />

    </RelativeLayout>

    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/carousel_upper"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:imageScaleType="fitXY" >
    </org.imaginativeworld.whynotimagecarousel.ImageCarousel>

    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/carousel_lower"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:imageScaleType="fitXY" >
    </org.imaginativeworld.whynotimagecarousel.ImageCarousel>

    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/carousel_footwear"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:imageScaleType="fitXY"></org.imaginativeworld.whynotimagecarousel.ImageCarousel>


</LinearLayout>