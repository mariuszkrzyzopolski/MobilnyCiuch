<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".CollectionFragment">


    <Button
        android:id="@+id/button_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:text="@string/cofnij" />

    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/carousel_upper"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:imageScaleType="fitXY" />

    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/carousel_lower"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:imageScaleType="fitXY" />

    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/carousel_footwear"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:imageScaleType="fitXY" />


</LinearLayout>